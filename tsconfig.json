{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "index.ts",
        "__tests__/*"
    ],
    "exclude": [
        "node_modules"
    ]
}